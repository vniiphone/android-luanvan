<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Light_purple"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Light"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_cart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Tour Nha Trang - Đà Lạt"
            android:textAlignment="center"
            android:textColor="@color/Dark_royal_purple"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_cart_image"
            android:layout_width="350dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/dinhdoclap" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/cart_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:src="@drawable/ic_remove" />

            <TextView
                android:id="@+id/cart_quantity"
                style="@style/TextStyle"
                android:layout_width="55sp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="6"
                android:textAlignment="center"
                android:textColor="@color/Dark_royal_purple"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/cart_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:src="@drawable/ic_add" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày đi:"
                    android:textColor="@color/Dark_royal_purple"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/item_cart_startTrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="30/4/2023"
                    android:textColor="@color/Dark_royal_purple"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_remove" />

                <TextView

                    android:id="@+id/item_cart_endTrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30/4/2023"
                    android:textColor="@color/Dark_royal_purple"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_slot"
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Số vé hiện có:"
                    android:textColor="@color/Dark_royal_purple"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/item_tour_slot"
                    style="@style/TextStyle"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:text="8"
                    android:textColor="@color/Dark_royal_purple"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền:"
                    android:textColor="@color/Dark_royal_purple"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/edt_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="1.200.000 $"
                    android:textColor="@color/Dark_royal_purple"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_margin="5dp"
                    android:id="@+id/btn_thanhtoan"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/rounded_button2"
                    android:gravity="center"
                    android:onClick="DatTour"
                    android:text="Thêm vào yêu thích"
                    android:textSize="25sp"
                    tools:ignore="TouchTargetSizeCheck" />

<!--                <Button-->
<!--                    android:id="@+id/btn_trove"-->
<!--                    android:layout_width="150dp"-->
<!--                    android:layout_height="48dp"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_marginTop="10dp"-->
<!--android:layout_margin="5dp"-->
<!--                    android:layout_marginBottom="5dp"-->
<!--                    android:background="@drawable/rounded_button2"-->
<!--                    android:gravity="center"-->
<!--                    android:onClick="DatTour"-->
<!--                    android:text="Trở về"-->
<!--                    android:textSize="20sp"-->
<!--                    tools:ignore="TouchTargetSizeCheck" />-->
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>

