<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.02_HelloWorld" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/Plain_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@color/Plain_purple</item>
        <item name="color">@color/Plain_purple</item>
        <item name="strokeColor">@color/Plain_purple</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Các thuộc tính khác -->
    </style>
    <style name="Theme.Material3.DayNight.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>

    <style name="TitleStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <!--        <item name="android:background">#33FFBB</item>-->
        <item name="android:textColor">#CC00CC</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="LabelStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#0000FF</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="TextStyleLight" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FDF4F5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="ButtonStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundColor">#1001AF</item>
        <item name="android:layout_marginLeft">7dp</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:layout_width">55sp</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ButtonStyle2" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">#33AAAA</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.02_HelloWorld.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.02_HelloWorld.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.02_HelloWorld.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>